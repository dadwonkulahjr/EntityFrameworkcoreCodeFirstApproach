@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>
<div class="mt-3">
    <form asp-action="CreateRole" asp-controller="Administration" method="post">
        <div class="form-group row">
            <label asp-for="RoleName" class="col-form-label col-md-2"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary">Create Role</button>
               <a class="btn btn-primary" asp-controller="Administration" asp-action="ListRoles">
                   Cancel
               </a>
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>



