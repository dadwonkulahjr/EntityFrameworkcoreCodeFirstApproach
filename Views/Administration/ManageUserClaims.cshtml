@model UserClaimViewModel

@{
    ViewBag.Title = "Manage User Claims";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>
                Manage User Claims
            </h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {

                <div class="form-check m-1">
                    <input hidden="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].isSelected" class="form-check-input" />
                    <h5>
                        <label class="form-check-label" asp-for="@Model.Claims[i].isSelected">
                            @Model.Claims[i].ClaimType
                        </label>
                    </h5>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="EditUser" asp-controller="Administration" class="btn btn-primary" asp-route-id="@Model.UserId">
                Cancel
            </a>


        </div>

    </div>
</form>