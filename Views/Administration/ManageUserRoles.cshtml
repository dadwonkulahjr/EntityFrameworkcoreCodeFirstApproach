@model List<UserRolesViewModel>

@{
    var userId = ViewBag.userId;
    ViewBag.Title = "Manage User Roles";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden="hidden" asp-for="@Model[i].RoleId" />
                <input hidden="hidden" asp-for="@Model[i].RoleName" />
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <h5>
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].RoleName
                        </label>
                    </h5>
                </div>
            }
        </div>
        <div class="card-footer text-white">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a class="btn btn-primary" asp-route-id="@userId" asp-action="EditUser">Cancel</a>
        </div>
    </div>

</form>