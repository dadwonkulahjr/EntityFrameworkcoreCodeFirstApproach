@model List<UserRoleViewModel>
@{
    ViewBag.Title = "Edit User In Role";
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card m-2">
        <div class="card-header">
            <h2>Add or remove users from this role</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input hidden="hidden" asp-for="@Model[i].UserId" />
                <input hidden="hidden" asp-for="@Model[i].UserName" />
                <div class="form-check m-1">
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <h5>
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">
                            @Model[i].UserName
                        </label>
                    </h5>
                </div>
            }
        </div>
        <div class="card-footer text-white">
           <input type="submit" class="btn btn-primary" value="Update"/>
            <a class="btn btn-primary" asp-route-id="@roleId" asp-action="EditRole">Cancel</a>
        </div>
    </div>

</form>


