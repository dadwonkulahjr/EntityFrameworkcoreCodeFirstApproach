@model EditRoleViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>
<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-form-label col-md-2"></label>
        <div class="col-sm-10"> 
            <input asp-for="RoleName" class="form-control" />
            <span class="text-danger" asp-validation-for="RoleName"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-action="ListRoles" asp-controller="Administration">Cancel</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card mt-2">
        <div class="card-header">
            <h3 class="card-text">Users in this role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
               foreach (var user in Model.Users)
               {
                  <h5 class="card-title">
                      @user
                  </h5>
               }
            }
            else
            {
             <h4 class="card-text">None at the moment</h4>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" class="btn btn-primary" asp-route-roleId="@Model.Id">Add or remove users</a>
        </div>
    </div>
</form>