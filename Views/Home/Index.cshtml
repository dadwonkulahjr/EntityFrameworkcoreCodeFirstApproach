@model IEnumerable<Employee>

@{
    ViewBag.Title = "List Of Employees";
  
}

<div class="card-deck mt-3">
    @foreach (var employee in Model)
    {
        string phonePath = "~/images/" + (employee.PhotoPath ?? "img_avatar1.png");
        <div class="card" style="min-width: 18rem; max-width: 30.5%;margin:5px;">
            <div class="card-header text-center text-primary">
                <h4>@employee.Fullname</h4>
            </div>
            <img src="@phonePath" class="card-img-top imageThumnails rounded-circle" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-action="details" asp-controller="home" class="btn btn-primary btn-sm mt-2" asp-route-id="@employee.Id">View</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary btn-sm mt-2">Edit</a>
                <a asp-action="" asp-controller="home" class="btn btn-danger btn-sm mt-2">Delete</a>
            </div>
        </div>
    }
</div>